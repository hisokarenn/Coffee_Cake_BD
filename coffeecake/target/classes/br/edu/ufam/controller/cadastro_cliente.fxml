<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" styleClass="fundo-principal" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ufam.controller.CadastroClienteController">
   <children>
      <fx:include source="menu_bar.fxml" />
      <BorderPane prefHeight="399.0" prefWidth="600.0" styleClass="fundo-principal" VBox.vgrow="ALWAYS">
         <center>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="581.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="250.0" prefWidth="270.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox prefHeight="11.0" prefWidth="258.0">
                           <children>
                              <Label text="CPF" />
                              <TextField fx:id="txtCpf" prefHeight="25.0" prefWidth="202.0" styleClass="caixa-texto" />
                           </children>
                        </VBox>
                        <VBox prefHeight="11.0" prefWidth="258.0">
                           <children>
                              <Label text="Nome" />
                              <TextField fx:id="txtNome" prefHeight="25.0" prefWidth="202.0" styleClass="caixa-texto" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="10.0" prefHeight="6.0" prefWidth="300.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox prefHeight="11.0" prefWidth="258.0">
                           <children>
                              <Label text="Email" />
                              <TextField fx:id="txtEmail" prefHeight="25.0" prefWidth="202.0" styleClass="caixa-texto" />
                           </children>
                        </VBox>
                        <VBox prefHeight="11.0" prefWidth="258.0">
                           <children>
                              <Label text="Telefone" />
                              <TextField fx:id="txtTelefone" prefHeight="25.0" prefWidth="202.0" styleClass="caixa-texto" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </BorderPane.margin>
            </HBox>
         </center>
         <padding>
            <Insets bottom="10.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <top>
            <Label fx:id="lblTitulo" text="Titulo" BorderPane.alignment="TOP_LEFT">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </top>
         <bottom>
            <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#clickSalvar" styleClass="botao-principal" text="Salvar" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
</VBox>
