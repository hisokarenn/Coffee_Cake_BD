<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ufam.controller.MenuBarController">
  <menus>
    <Menu fx:id="menuUsuario" mnemonicParsing="false" text="Menu">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickHome" text="Home" />
      </items>
    </Menu>
      <Menu fx:id="menuUsuario1" mnemonicParsing="false" text="Comanda">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#clickListarComandasTodas" text="Todas" />
            <MenuItem mnemonicParsing="false" onAction="#clickListarComandasAbertas" text="Abertas" />
            <MenuItem mnemonicParsing="false" onAction="#clickListarComandasFechadas" text="Fechadas" />
            <MenuItem mnemonicParsing="false" onAction="#clickListarComandasCanceladas" text="Canceladas" />
            <MenuItem mnemonicParsing="false" onAction="#clickCadastrarComanda" text="Cadastrar" />
         </items>
      </Menu>
    <Menu fx:id="menuUsuario" mnemonicParsing="false" text="Usuários">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickListarUsuarios" text="Listar" />
      </items>
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickCadastrarUsuario" text="Cadastrar" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Ingrediente">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickListarIngredientes" text="Listar" />
      </items>
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickCadastrarIngrediente" text="Cadastrar" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Produto">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickListarProduto" text="Listar" />
      </items>
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickCadastrarProduto" text="Cadastrar" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Cliente">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#clickListarClientes" text="Listar" />
            <MenuItem mnemonicParsing="false" onAction="#clickCadastrarCliente" text="Cadastrar" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Opções">
      <items>
        <MenuItem fx:id="relatorio" mnemonicParsing="false" onAction="#clickRelatorio" text="Relatorio" />
            <MenuItem mnemonicParsing="false" onAction="#clickLogout" text="Sair" />
      </items>
    </Menu>
  </menus>
</MenuBar>
